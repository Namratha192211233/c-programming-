#include <stdio.h>
main(void)
{
	int age,a;
	printf("Enter your age : ");
	scanf("%d",&age);
	if(age>=18)
	{
		printf("You are eligible for voting");
	}
	else
	{
		printf("You are not eligible for voting\n");
		a=18-age;
		if(a==1)
		{
			printf("You are eligible for voting in %d year",a);
		}
		else
		{
			printf("You are eligible for voting in %d years",a);
		}
	}
}
